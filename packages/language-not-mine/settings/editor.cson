".source.awk,
 .source.tm-properties":
	editor:
		commentStart: "# "

".source.diff":
	whitespace:
		removeTrailingWhitespace: false

".source.odin":
	editor:
		commentStart: "// "

".source.r":
	editor:
		commentStart: "# "
		increaseIndentPattern: "^\\s*#region"
		decreaseIndentPattern: "^\\s*#endregion"

".source.makefile":
	editor:
		increaseIndentPattern: "^[^\\t ]+:"
		commentStart: "# "
		tabType: "hard"
